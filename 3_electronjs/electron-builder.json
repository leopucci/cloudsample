{
    "appId": "cloud.pocket.pocketcloud",
    "productName": "Pocket.Cloud",
    "copyright": "Pocket Cloud Ltd.",
	"npmRebuild": true,
	"buildDependenciesFromSource": true,
    "directories": {
        "app": ".",
        "output": "out",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "app/**/*",
        "node_modules"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "width": "400",
            "height": "300"
		},
        "contents": [
        
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "icon": "resources/paper.png",
        "category": "public.app-category.utilities",
        "extendInfo": {
            "LSBackgroundOnly": 1,
            "LSUIElement": 1
        }
    },
    "win": {
        "target": "nsis",
        "icon": "resources/paper.png"
    },
	"nsis": {
      "perMachine" : true,
	  "deleteAppDataOnUninstall": true
    },
	"protocols": [{
      "name": "pocketcloud",
      "schemes": [
        "pocketcloud"
      ]
    }],
    "linux": {
        "target": "AppImage",
        "category": "Utility",
        "icon": "resources/paper.png"
    },
    "publish": {
        "provider": "github",
        "owner": "leopucci",
        "repo": "pktreleases",
        "releaseType": "release"
    }
}